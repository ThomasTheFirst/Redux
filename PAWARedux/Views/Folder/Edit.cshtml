@model PAWARedux.Models.Folder

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Folder</legend>

        @Html.HiddenFor(model => model.FolderID)

        <div class="editor-label">
            @Html.LabelFor(model => model.UserID, "User")
        </div>
        <div class="editor-field">
            @Html.DropDownList("UserID", String.Empty)
            @Html.ValidationMessageFor(model => model.UserID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.InFolderID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.InFolderID)
            @Html.ValidationMessageFor(model => model.InFolderID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CreateDateTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CreateDateTime)
            @Html.ValidationMessageFor(model => model.CreateDateTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FolderName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FolderName)
            @Html.ValidationMessageFor(model => model.FolderName)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
